#!/usr/bin/env bash
ln -sf ${BASE_PATH}/run_CSCNTuple.py tmp_CSCNTuple.py

# test the presence of the interactive flag
interactive=false
for var in "$@" 
do
    if [ $var == "-i" ]; then
    echo 'interactive mode'
    interactive=true
    fi
done

if [ "$interactive" = true ]; then 
    ipython -i -- tmp_CSCNTuple.py "$@"
else
    ipython -- tmp_CSCNTuple.py "$@"
fi 

rm tmp_CSCNTuple.py
